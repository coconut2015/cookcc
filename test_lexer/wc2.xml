<cookcc>
	<!-- header is the general header such as copyright notice for the generated output file -->
	<header>
/*
 *	This is a simple word count program.
 */</header>
	<tokens>
	</tokens>
	<lexer>
		<shortcut name="ws">[ \t]</shortcut>
		<shortcut name="nonws">[^ \t\n]</shortcut>
		<shortcut name="word">{ws}*{nonws}+</shortcut>
		<rule>
			<pattern>{word}{ws}*</pattern>
			<action>cc += yyleng; ++wc;</action>
		</rule>
		<rule>
			<pattern>{word}{ws}*\n</pattern>
			<action>cc += yyleng; ++wc; ++lc;</action>
		</rule>
		<rule>
			<pattern>{ws}+</pattern>
			<action>cc += yyleng;</action>
		</rule>
		<rule>
			<pattern>\n+</pattern>
			<action>cc += yyleng; lc += yyleng;</action>
		</rule>
		<rule>
			<pattern><![CDATA[<<EOF>>]]></pattern>
			<action></action>
		</rule>
	</lexer>
	<parser>
	</parser>
</cookcc>
