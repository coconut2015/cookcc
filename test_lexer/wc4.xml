<cookcc>
	<lexer>
		<shortcut name="ws">[ \t]</shortcut>
		<shortcut name="nonws">[^ \t\n]</shortcut>
		<shortcut name="word">{ws}*{nonws}+</shortcut>
		<shortcut name="words">{word}{ws}+</shortcut>
		<rule>
			<pattern>{word}{ws}*</pattern>
			<action>++wc; cc += yyleng;</action>
		</rule>
		<rule>
			<pattern>{word}{ws}*\n</pattern>
			<action>++wc; cc += yyleng; ++lc;</action>
		</rule>
		<rule>
			<pattern>{words}{word}{ws}*</pattern>
			<action>wc += 2; cc += yyleng;</action>
		</rule>
		<rule>
			<pattern>{words}{word}{ws}*\n</pattern>
			<action>wc += 2; cc += yyleng; ++lc;</action>
		</rule>
		<rule>
			<pattern>{words}{2}{word}{ws}*</pattern>
			<action>wc += 3; cc += yyleng;</action>
		</rule>
		<rule>
			<pattern>{words}{2}{word}{ws}*\n</pattern>
			<action>wc += 3; cc += yyleng; ++lc;</action>
		</rule>
		<rule>
			<pattern>{words}{3}{word}{ws}*</pattern>
			<action>wc += 4; cc += yyleng;</action>
		</rule>
		<rule>
			<pattern>{words}{3}{word}{ws}*\n</pattern>
			<action>wc += 4; cc += yyleng; ++lc;</action>
		</rule>
		<rule>
			<pattern>{words}{2}{word}{ws}*</pattern>
			<action>wc += 3; cc += yyleng;</action>
		</rule>
		<rule>
			<pattern>{ws}+</pattern>
			<action>cc += yyleng;</action>
		</rule>
		<rule>
			<pattern>\n+</pattern>
			<action>cc += yyleng; lc += yyleng;</action>
		</rule>
		<rule>
			<pattern><![CDATA[<<EOF>>]]></pattern>
			<action></action>
		</rule>
	</lexer>
</cookcc>
